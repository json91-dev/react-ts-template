{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "dom"
    ],
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "typeRoots": [
      "./src/types",
      "./node_modules/@types"
    ],
//    "noImplicitReturns": true,
//    "noImplicitThis": true,
//    "noImplicitAny": true,
  },
  "exclude": [
    "node_modules"
  ]
}